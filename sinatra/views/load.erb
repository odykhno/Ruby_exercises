<% if @error %>
  <h4>File with name <font color="red"><%= @filename %>.txt</font> is not exists</h4>
<% else %>
  <h4>List of words loaded from file <font color="red"><%= @filename %>.txt</font>:</h4>
  <% @output.each do |word| %>
    <p><i><%= word %></i><p>
  <% end %>
<% end %>

<form action="/back" method="get">
  <p><input type="submit" value="Back"></p>
</form>